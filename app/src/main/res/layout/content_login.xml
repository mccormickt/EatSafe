<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_login"
        tools:context="edu.gatech.cc.eatsafe.LoginActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EatSafe"
            android:layout_centerHorizontal="true"
            android:id="@+id/title"
            android:textSize="36sp" android:fontFamily="sans-serif-smallcaps"/>
    <ImageView
            android:layout_width="250px"
            app:srcCompat="@drawable/eatsafe"
            android:id="@+id/logo"
            android:layout_below="@+id/title" android:layout_centerHorizontal="true"
            android:layout_height="250px"/>
    <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register" android:layout_alignParentBottom="true" android:layout_alignLeft="@+id/sign_in"
            android:layout_alignStart="@+id/sign_in"/>
    <Button
            android:text="Sign In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_in"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:hint="Password"
            android:layout_above="@+id/sign_in" android:layout_centerHorizontal="true"
            android:layout_marginBottom="56dp" android:singleLine="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:hint="Email"
            android:layout_centerVertical="true" android:layout_alignLeft="@+id/password"
            android:layout_alignStart="@+id/password" android:singleLine="true"/>
</RelativeLayout>
