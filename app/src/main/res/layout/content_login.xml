<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context="edu.gatech.cc.eatsafe.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EatSafe"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView3"
            android:textSize="36sp" android:fontFamily="sans-serif-smallcaps"/>
    <ImageView
            android:layout_width="250px"
            app:srcCompat="@drawable/eatsafe"
            android:id="@+id/imageView4"
            android:layout_below="@+id/textView3" android:layout_centerHorizontal="true"
            android:layout_height="250px"/>
    <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_alignParentBottom="true" android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"/>
    <Button
            android:text="Sign In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText2"
            android:hint="Password"
            android:layout_above="@+id/button" android:layout_centerHorizontal="true"
            android:layout_marginBottom="56dp" android:singleLine="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText3"
            android:hint="Email"
            android:layout_centerVertical="true" android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2" android:singleLine="true"/>
</RelativeLayout>
